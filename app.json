{
  "expo": {
    "name": "LagosTrafficRadio",
    "slug": "LagosTrafficRadio",
    "version": "1.4.1",
    "orientation": "portrait",
    "icon": "./assets/lagos-traffic-radio-logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-new.png",
      "resizeMode": "contain",
      "backgroundColor": "#00002F"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.modetech.LagosTrafficRadio"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/lagos-traffic-radio-logo.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.modetech.LagosTrafficRadio"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "@react-native-google-signin/google-signin",
       "expo-font",
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "54cb1a76-ef7c-423c-9b0f-3bcedbbe24ad"
      }
    },
    "scheme": [
      "fb830921012386291"
    ]
  }
}



